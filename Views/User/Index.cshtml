@using RunWebAppGroup.ViewModels
@model List<UserViewModel>;


<div class="albun py-5 bg-light">
    <div class="container">
        <div class="row">
           @foreach (var user in Model)
           {
             <div class="col-md-4">
                 <div class="card mb-4 box-shadow">
                    @* <img alt="Image profile avatar" src="@user.ProfileImageUrl" class="avatar"> *@
                    <div class="card-body">
                        <p class="card-text">@user.UserName</p>
                            <p class="card-text">@user.Mileage</p>
                            <p class="card-text">@user.Pace</p>
                              <div class="d-flex justify-content-between align-items-center">
                                 <div class="btn-group">
                                    <a asp-controller="User" asp-action="Detail" asp-route-id="@user.Id"
                                       class="btn btn-sm btn-outline-secondary">View</a>
                                    @if(User.Identity.IsAuthenticated && User.IsInRole("admin"))
                                    {
                                        <a asp-controller="Club" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                        <a asp-controller="Club" asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-outline-secondary">Delete</a>
                                    }
                                </div>
                                @*<small class="text-muted">@item.ClubCategory</small>*@
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>